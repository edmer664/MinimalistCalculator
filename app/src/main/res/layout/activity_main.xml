<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/subDisplay"
        android:fontFamily="@font/poppins_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintCircleRadius="0dp"
        android:text=""
        android:textSize="24sp"
        android:textColor="#818181"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainDisplay"
        android:fontFamily="@font/poppins_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text=""
        android:textColor="#424242"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subDisplay" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="C"
            android:textAlignment="center"
            android:textColor="#818181"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <ImageView
            android:id="@+id/backspaceButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/baseline_backspace_24"
            android:text=""
            android:textAlignment="center"
            android:textColor="#818181"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp">

        </ImageView>

        <Button
            android:id="@+id/divideButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:background="@color/md_theme_light_primaryContainer"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp">

        </Button>

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:background="@color/md_theme_light_primaryContainer"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        >

        <Button
            android:id="@+id/number7Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp">

        </Button>

        <Button
            android:id="@+id/number8Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/number9Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:background="@color/md_theme_light_primaryContainer"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        >

        <Button
            android:id="@+id/number4Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/number5Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/number6Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:background="@color/md_theme_light_primaryContainer"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/number1Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/number2Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/number3Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:background="@color/md_theme_light_primaryContainer"
            android:gravity="center"
            android:text="="
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/number0Button"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/dotButton"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="."
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_primary"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:borderWidth="0dp"
            app:cornerRadius="50dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>